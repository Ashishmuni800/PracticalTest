@model PracticalTest.Models.Employee

@{
    ViewData["Title"] = "Employee Management Edit";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditEmployee" method="post" asp-controller="Employee">
    <div class="form-group">
        <input type="hidden" name="Id" asp-for="Id" />
    </div>
    <div class="form-group">
        <label for="EmployeeCode">Employee Code</label>
        <input type="number" class="form-control" id="EmployeeCode" name="EmployeeCode" asp-for="EmployeeCode" />
    </div>

    <div class="form-group">
        <label for="EmployeeName">Employee Name</label>
        <input type="text" class="form-control" id="EmployeeName" name="EmployeeName" asp-for="EmployeeName" />
    </div>

    <div class="form-group">
        <label for="DateOfBirth">Date of Birth</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" asp-for="DateOfBirth" />
    </div>

    <div class="form-group">
        <label>Gender</label><br />
        <input type="radio" id="Male" name="Gender" value="true" asp-for="Gender" /> Male
        <input type="radio" id="Female" name="Gender" value="false" asp-for="Gender" /> Female
    </div>

    <div class="form-group">
        <label for="Department">Department</label>
        <input type="text" class="form-control" id="Department" name="Department" asp-for="Department" />
    </div>

    <div class="form-group">
        <label for="Designation">Designation</label>
        <input type="text" class="form-control" id="Designation" name="Designation" asp-for="Designation" />
    </div>

    <div class="form-group">
        <label for="BasicSalary">Basic Salary</label>
        <input type="number" step="any" class="form-control" id="BasicSalary" name="BasicSalary" asp-for="BasicSalary" />
    </div>

    <button type="submit" class="btn btn-primary">Edit Employee</button>
</form>